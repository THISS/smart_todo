<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>todo list</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <link rel="stylesheet" id="bulma" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.4.0/css/bulma.min.css" />
  <link rel="stylesheet" type="text/css" href="/styles/boards.css">
  <link rel="stylesheet" type="text/css" href="/styles/layout.css">
  <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
</head>
<body>
  <header>
      <nav class="nav has-shadow columns is-desktop" id="top">
          <h1 class="column is-one-quarter"> Smart TODO</h1>
          <div class="column">
            <div class='what-todo-box-bg'>
              <i class="fa fa-times-circle todo-close" aria-hidden="true"></i>
              <i class="fa fa-plus todo-add" aria-hidden="true"></i>
              <input class="input is-large" id="what-todo-box" type="text" name="todo" placeholder="What would you like to do?" ><br>
            </div>
          </div>
          <div class="column is-one-quarter">
               <button class="login" type="button">Login</button>
          </div>
    </nav>
  </header>

  <main class="section">
      <section class="boards">
      <%include partials/_not-signed-in %>
        <div class="columns">

          <div class="column is-3 board" id="b1">
            <div class="box is-gray">
              <div class="head">
                <div class="name">Watch</div>
                <div class="count">1</div>
              </div>
              <div class="items">
                <ul class="box" id="b1c1">
                  <li><label><input type="checkbox"/>test item</label></li>
                  <button class="edit"><i class="fa fa-pencil-square-o"></i></button>
                  <button class="trash"><i class="fa fa-trash-o"></i></button>
                </ul>
                <div class="add-card">
                 <div onclick="addCard(this)">
                  <i class="fa fa-plus-circle"></i>
                  Add item
                </div>
              </div>
            </div>
          </div>
        </div>


        <div class="column is-3 board" id="b2">
            <div class="box is-gray">
              <div class="head">
                <div class="name">Eat</div>
                <div class="count">1</div>
              </div>
              <div class="items">
                <ul class="box" id="b1c1">
                  <li><label><input type="checkbox"/>test item</label></li>
                  <button class="edit"><i class="fa fa-pencil-square-o"></i></button>
                  <button class="trash"><i class="fa fa-trash-o"></i></button>
                </ul>
                <div class="add-card">
                 <div onclick="addCard(this)">
                  <i class="fa fa-plus-circle"></i>
                  Add item
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="block">
       <a class="button eatsm">Eat</a>
       <a class="button watchsm">Watch</a>
        <a class="button buysm">Buy</a>
        <a class="button readsm">Read</a>
       </div>

          <div class="column is-3 board" id="b2">
            <div class="box is-gray">
              <div class="head">
                <div class="name">Eat</div>
                <div class="count">1</div>
                <span class="options"><i class="fa fa-ellipsis-h"></i></span>
              </div>
              <div class="items">
                <div class="box" id="b2c1">
                  <p class="title">test item</p>
                </div>
                <div class="add-card">
                 <div onclick="addCard(this)">
                  <i class="fa fa-plus-circle"></i>
                  Add item
                </div>
              </div>
            </div>
          </div>
        </div>

          <div class="column is-3 board" id="b3">
            <div class="box is-gray">
              <div class="head">
                <div class="name">Buy</div>
                <div class="count">1</div>
                <div class="options"><i class="fa fa-ellipsis-h"></i></div>
              </div>
              <div class="items">
                <div class="box" id="b3c1">
                  <p class="title">test item</p>
                </div>
                <div class="add-card">
                 <div onclick="addCard(this)">
                  <i class="fa fa-plus-circle"></i>
                  Add item
                </div>
              </div>
            </div>
          </div>
        </div>

          <div class="column is-3 board" id="b4">
            <div class="box is-gray">
              <div class="head">
                <div class="name">Read</div>
                <div class="count">1</div>
                <div class="options"><i class="fa fa-ellipsis-h"></i></div>
              <div class="items">
                <div class="box" id="b4c1">
                  <p class="title">test item</p>
                </div>
                <div class="add-card">
                 <div onclick="addCard(this)">
                  <i class="fa fa-plus-circle"></i>
                  Add item
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </section>
</main>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Faker/3.1.0/faker.min.js"></script>
  <script type="text/javascript" src="/scripts/bulma.js"></script>
  <script type="text/javascript" src="/scripts/boards.js"></script>
  <script type="text/javascript" src="/scripts/users.js"></script>
</body>
</html>
